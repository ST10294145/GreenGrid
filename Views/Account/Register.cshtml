@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - GreenGrid</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f9f4;
            color: #2e473b;
            margin: 0;
            padding: 0;
        }

        header, nav, footer {
            background-color: #3e7c4c;
            color: white;
            padding: 1rem;
        }

        a {
            color: #2e6e3f;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .btn-primary {
            background-color: #5fa65f;
            border: none;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 4px;
        }

        .btn-primary:hover {
            background-color: #4a8f4a;
        }

        .container {
            margin: 2rem auto;
            padding: 2rem;
            background-color: #ffffff;
            border: 1px solid #d3e5d3;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            max-width: 800px;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        select {
            width: 100%;
            padding: 0.5rem;
            margin: 0.5rem 0;
            border: 1px solid #b0c9b0;
            border-radius: 4px;
        }

        label {
            font-weight: bold;
            color: #2d5235;
        }

        h1, h2, h3 {
            color: #3b703b;
        }

        footer {
            text-align: center;
            font-size: 0.9rem;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <header>
        <h1>GreenGrid - Sustainable Farming</h1>
    </header>

    <div class="container">
        <h2>Welcome to GreenGrid</h2>
        <p>This is your sustainable agriculture dashboard.</p>
        <a href="/Account/Login" class="btn-primary">Login</a>
    </div>

    <footer>
        <p>&copy; 2025 GreenGrid. All rights reserved.</p>
    </footer>
</body>
</html>
